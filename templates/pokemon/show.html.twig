{% extends 'base.html.twig' %}

{% block title %}Pokemon{% endblock %}

{% block body %}
    <h1>Pokemon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Type_1</th>
                <td>{{ pokemon.type1 }}</td>
            </tr>
            <tr>
                <th>Type_2</th>
                <td>{{ pokemon.type2 }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ pokemon.total }}</td>
            </tr>
            <tr>
                <th>Hp</th>
                <td>{{ pokemon.hp }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ pokemon.attack }}</td>
            </tr>
            <tr>
                <th>Defense</th>
                <td>{{ pokemon.defense }}</td>
            </tr>
            <tr>
                <th>Sp_atk</th>
                <td>{{ pokemon.spAtk }}</td>
            </tr>
            <tr>
                <th>Sp_def</th>
                <td>{{ pokemon.spDef }}</td>
            </tr>
            <tr>
                <th>Speed</th>
                <td>{{ pokemon.speed }}</td>
            </tr>
            <tr>
                <th>Generation</th>
                <td>{{ pokemon.generation }}</td>
            </tr>
            <tr>
                <th>Legendary</th>
                <td>{{ pokemon.legendary ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pokemon_index') }}">back to list</a>

    <a href="{{ path('app_pokemon_edit', {'id': pokemon.id}) }}">edit</a>

    {{ include('pokemon/_delete_form.html.twig') }}
{% endblock %}
